<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net6.0; net8.0</TargetFrameworks>
    <Title>Refitter</Title>
    <PackageId>Refitter</PackageId>
    <AssemblyName>refitter</AssemblyName>
    <RootNamespace>Refitter</RootNamespace>
    <Product>Refit API Client Code Generator</Product>
    <Description>Refitter is a CLI tool for generating a C# REST API Client using the Refit library.</Description>
    <PackAsTool>true</PackAsTool>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Refitter.Core\Refitter.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Exceptionless" Version="6.0.4" />
    <PackageReference Include="Spectre.Console.Cli" Version="0.49.1" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>